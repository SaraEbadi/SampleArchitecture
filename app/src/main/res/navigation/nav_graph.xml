<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/photosFragment">

    <fragment
        android:id="@+id/photosFragment"
        android:name="com.example.codingtest.presentation.features.photos.list.PhotosFragment"
        android:label="PhotosFragment" >
        <action
            android:id="@+id/action_photosFragment_to_photoDetailsFragment"
            app:destination="@id/photoDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoDetailsFragment"
        android:name="com.example.codingtest.presentation.features.photos.detail.PhotoDetailsFragment"
        android:label="PhotoDetailsFragment">
    <argument
        android:name="photo"
        app:argType="com.example.codingtest.domain.model.PhotoModel" />
    </fragment>
</navigation>